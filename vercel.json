{
  "version": 2,
  "builds": [
    { "src": "api.js", "use": "@vercel/node" },
    { "src": "newsletterlanding.html", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" },
    { "src": "**/*.{jpg,jpeg,png,webp,gif,svg,ico}" , "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/subscribe", "dest": "/api.js" },
    { "src": "/(.*)", "dest": "/newsletterlanding.html" }
  ],
  "env": {
    "MAILCHIMP_API_KEY": "@mailchimp_api_key",
    "MAILCHIMP_LIST_ID": "@mailchimp_list_id",
    "MAILCHIMP_DC": "@mailchimp_dc"
  }
}
